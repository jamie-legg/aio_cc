# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Ngrok Configuration (for OAuth callbacks)
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here
NGROK_DOMAIN=your_ngrok_domain.ngrok-free.dev

# Instagram Graph API Configuration (for Reels uploads)
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
# Redirect URI will be set dynamically by ngrok

# YouTube Data API v3 Configuration
YOUTUBE_CLIENT_SECRETS_FILE=path/to/your/client_secrets.json
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# TikTok for Developers API Configuration
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
# Redirect URI will be set dynamically by ngrok

# FTP Server Configuration (for video hosting)
FTP_URL=your_ftp_server_url
FTP_ACCESS_KEY=your_ftp_access_key
FTP_SECRET_KEY=your_ftp_secret_key
FTP_BUCKET=your_ftp_bucket_name

# Upload Configuration
UPLOAD_TO_INSTAGRAM=true
UPLOAD_TO_YOUTUBE=true
UPLOAD_TO_TIKTOK=true
